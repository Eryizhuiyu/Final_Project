        <!--Travel Destination-->
        <div class="title">
            <p id="name">PHOTO INFORMATION</p>
            <div class="info">
                <ul id = "photo_info">
                    <li><b>Travelog: </b> <%=results["img_travel_destination"]%></li>
                    <li><b>Series: </b> <%=results["img_series_name"]%></li>
                    <li><b>Category: </b> <%=results["img_category"]%></li>
                    <li><b>Device: </b> <%=results["img_device"]%></li>
                </ul>
            </div>
        </div>
        
        <!--Photo Scroll-->
        <div class="daily">
            <figure id=insert>
                <%console.log(results["img_url"])%>
                <img src="/<%=results["img_url"]%>" width="100%">
            </figure>
            <div id="heart"></div>
            
            <h1></h1>
        </div>
        
        <!-- Photo Comments -->
        <div class="comments">
            <p id="name">COMMENTS</p>
            <ul id = "comment_display">
                <% for(var i=results["img_comments"].length-1; i>=0; i--){ %>
